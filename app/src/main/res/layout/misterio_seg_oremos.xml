<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/lblOremos"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imgMt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/bntCreioSeg"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:background="@color/bntColorIdiomaLT"
        android:onClick="onClick_CreioExibir"
        android:text="@string/lblCreioTitulo"
        app:layout_constraintBottom_toTopOf="@+id/bntPaiNossoSeg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMt1" />

    <Button
        android:id="@+id/bntGloriaSeg"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:background="@color/bntColorIdiomaLT"
        android:onClick="onClick_GloriaExibir"
        android:text="@string/lblGloriaTitulo"
        app:layout_constraintBottom_toTopOf="@+id/txtAvisoSeg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntOremosSeg" />

    <TextView
        android:id="@+id/txtAvisoSeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblDicaTercoSlide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntGloriaSeg" />

    <Button
        android:id="@+id/bntPaiNossoSeg"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:background="@color/bntColorIdiomaLT"
        android:onClick="onClick_PaiNossoExibir"
        android:text="@string/lblPaiNossoTitulo"
        app:layout_constraintBottom_toTopOf="@+id/bntOremosSeg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntCreioSeg" />

    <ImageView
        android:id="@+id/imgMt1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bntCreioSeg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/nobis" />

    <Button
        android:id="@+id/bntOremosSeg"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:background="@color/bntColorIdiomaLT"
        android:onClick="onClick_AveMariaExibir"
        android:text="@string/bntAveMaria3"
        app:layout_constraintBottom_toTopOf="@+id/bntGloriaSeg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntPaiNossoSeg" />
</androidx.constraintlayout.widget.ConstraintLayout>