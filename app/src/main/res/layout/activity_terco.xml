<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splbg"
    android:fitsSystemWindows="true"
    tools:context=".Activity.TercoActivity">

    <ImageButton
        android:id="@+id/imgTerco"
        android:layout_width="414dp"
        android:layout_height="279dp"
        android:layout_marginTop="53dp"
        android:background="@android:color/transparent"
        android:paddingTop="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/p0" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/barramsg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/layoutbnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTerco">

        <TextView
            android:id="@+id/txtSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/merriweather_light"
            android:gravity="bottom|center"
            android:text="@string/lblDicaTercoPosicao"
            android:textAllCaps="true"
            android:textColor="@color/txtDica"
            android:textColorLink="@color/textoTitulo"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="@string/lblDicaTercoPosicao" />

        <TextView
            android:id="@+id/txtOracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_light"
            android:foregroundGravity="center"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scrollbars="vertical"
            android:text="@string/lblCreio"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutbnt"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/barramsg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/imgIcoVoltar"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/txtVoltar"
            app:layout_constraintEnd_toStartOf="@+id/imgIcoPosicao"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_voltar" />

        <TextView
            android:id="@+id/txtVoltar"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:text="@string/lblVoltar"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtPosicao"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgIcoVoltar"
            tools:text="@string/lblVoltar" />

        <TextView
            android:id="@+id/txtPosicao"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:text="@string/lblPosicao"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtIdioma"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtVoltar"
            app:layout_constraintTop_toBottomOf="@+id/imgIcoPosicao" />

        <ImageButton
            android:id="@+id/imgIcoPosicao"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:foregroundGravity="center"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@+id/txtPosicao"
            app:layout_constraintEnd_toStartOf="@+id/imgIcoIdioma"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgIcoVoltar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_posicao" />

        <ImageButton
            android:id="@+id/imgIcoIdioma"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:foregroundGravity="top"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@+id/txtIdioma"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgIcoPosicao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_portugues" />

        <TextView
            android:id="@+id/txtIdioma"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:text="@string/portugues"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtPosicao"
            app:layout_constraintTop_toBottomOf="@+id/imgIcoIdioma" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="@drawable/superiorbarra"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/lgap" />

        <TextView
            android:id="@+id/txtTituloOracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alex_brush"
            android:gravity="center"
            android:text="@string/lblCreioTitulo"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/textoTitulo"
            android:textSize="25sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>